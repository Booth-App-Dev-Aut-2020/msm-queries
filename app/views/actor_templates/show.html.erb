<h1> Actor #<%=@act.id%> details </h1>
<a href="/actor" class="btn btn-block btn-iutline-secondary"> Go back </a>

&nbsp;|&nbsp;

<a href="/delete_actor/<%=@act.id%>" class="btn btn-block btn-iutline-secondary"> Delete actor </a>

<hr>

<dl>
  <dt>
  Name
  </dt>
  <dd>
  <%=@act.name%>
  </dd>
  <dt>
  Dob
  </dt>
  <dd>
  <%=@act.dob%>
  </dd>
 <dt>
  Bio
  </dt>
  <dd>
  <%=@act.bio%>
  </dd>
   <dt>
  Image
  </dt>
  <dd>
  <img src="https://robohash.org/<%=@act.image%>">
  </dd>
   <dt>
  Created at
  </dt>
  <dd>
  <%= time_ago_in_words(@act.created_at)%> ago
  </dd>
    <dt>
  Updated at
  </dt>
  <dd>
  <%= time_ago_in_words(@act.updated_at)%> ago
  </dd>

&nbsp;|&nbsp;

<h2> Filmography </h1>
<table border="1">
<% @filmography.each do |film| %>
<tr>
  <td> <%= Movie.where({:id=>film.movie_id}).first.title %> </td> 
  <td> <%= Movie.where({:id=>film.movie_id}).first.year %> </td> 
  <td> <%= Director.where({:id=>Movie.where({:id=>film.movie_id}).first.director_id}).first.name %> </td>
  <td> <%= film.name%> </td>
  <td> <a href="/movies/<%=film.movie_id%>"> Show details </a> </td> 
</tr>
<%end%>
